<script>
const stopWords = ["the","and","is","in","to","of","for","on","with","as","by","at","from","or","an","be","this","that"];

function cleanText(text){
  return text.toLowerCase()
  .replace(/<[^>]*>/g,"")
  .replace(/[^a-z0-9\s]/g,"")
  .replace(/\s+/g," ")
  .trim();
}

function getKeywords(words,n){
  let phrases = {};
  for(let i=0;i<=words.length-n;i++){
    let phrase = words.slice(i,i+n).join(" ");
    if(stopWords.includes(phrase)) continue;
    phrases[phrase]=(phrases[phrase]||0)+1;
  }
  return phrases;
}

function checkDensity(){
  let raw = document.getElementById("content").value;
  let format = document.getElementById("format").value;
  if(raw.trim()===""){alert("Please enter content");return;}

  let text = cleanText(raw);
  let words = text.split(" ");
  let totalWords = words.length;

  let oneWord = getKeywords(words,1);
  let twoWord = getKeywords(words,2);
  let threeWord = getKeywords(words,3);

  function buildTable(data,title){
    let rows="";
    Object.entries(data)
    .sort((a,b)=>b[1]-a[1])
    .slice(0,15)
    .forEach(([k,v])=>{
      let density=((v/totalWords)*100).toFixed(2);
      rows+=`<tr><td>${k}</td><td>${v}</td><td>${density}%</td></tr>`;
    });

    return `
    <h3>${title}</h3>
    <table>
    <tr><th>Keyword</th><th>Count</th><th>Density</th></tr>
    ${rows}
    </table>`;
  }

  document.getElementById("result").innerHTML=
    `<p><b>Total Words:</b> ${totalWords}</p>`+
    buildTable(oneWord,"Single Keywords")+
    buildTable(twoWord,"2-Word Phrases")+
    buildTable(threeWord,"3-Word Phrases");
}
</script>

